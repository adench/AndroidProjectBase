<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.xqkj.baselibrary.weight.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/shadow_line" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        tl:tl_iconHeight="24dp"
        tl:tl_iconWidth="24dp"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="@color/tab_select"
        tl:tl_textUnselectColor="@color/tab_normal"
        tl:tl_textsize="13dp" />

    <View
        android:id="@+id/shadow_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#21d81e06"
        android:layout_above="@+id/tablayout"
        />

</RelativeLayout>
